.game-start
    position: absolute
    left: 300px
    top: 110px
    height: 460px
    width: 320px
    background-color: #336699
    border-radius: 30px
    border: 2px solid #99f
    padding: 20px 50px
    color: #ffffff
    text-align: center
    /*display: none;*/

.game-start__message h2
    font-size: 28px
    color: #ffffff
    margin: 20px 0

.game-start__button
    position: absolute
    left: 100px
    top: 360px

    & button
        height: 60px
        width: 200px
        background-color: #ff0000
        border: 2px solid #f66
        padding: 0
        font: 400 18px / 1 Arial, sans-serif
        text-shadow: 0 1px 1px #f99
        transition: background-color .2s
        will-change: transition

        &:hover
            background-color: #ff3333